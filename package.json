{
  "name": "three-suburi",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "watch": "webpack -w",
    "serve": "serve dist",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "type-check": "tsc --pretty"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,md}": [
      "prettier --ignore-path .gitignore --write",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{ts,tsx}": [
      "tsc --pretty"
    ]
  },
  "devDependencies": {
    "@croutonn/eslint-config": "^1.0.14",
    "eslint": "^7.14.0",
    "html-webpack-plugin": "^5.0.0-alpha.14",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0",
    "serve": "^11.3.2",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "three": "^0.122.0"
  }
}
